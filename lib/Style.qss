        font: 100 12pt;
        border-radius:15px;
}



/**********TitleButton**********/

QTitleButton{
        background-color: rgba(255, 255, 255, 0);      
        border: 0px;
        font: 100 10pt;     
}
QTitleButton#CloseButton{
        color: #D32424;
}
QTitleButton#MaxButton{
        color:rgba(95,158,160,150);
}

QTitleButton#MinButton{
        color:rgba(255,255,0,150);
}

QTitleButton#MinButton:hover{
        background-color: #D0D0D1;
        border: 15px;
        font: 100 10pt;
        color: black;
}
QTitleButton#MaxButton:hover{
        background-color: #D0D0D1;
        border: 15px;
        font: 100 10pt;
        color: black;
}
QTitleButton#CloseButton:hover{
        background-color: #D32424;
        color: white;
        border: 15px;
        font: 100 10pt;
        border-top-right-radius: 10px;
}


